@model BanSach.Models.EditAccountModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Account_Actions.cshtml";
}

<div class="main">
    <h2>Edit your account</h2>
    <form action="/Account/Edit" method="post">
        @Html.AntiForgeryToken()
        <label class="error">@Html.ValidationMessage("Invalid")</label>
        <div class="input">
            <input class="form-control" id="Username" name="username" value="@Model.username">
            <!---->
            <label>Họ tên đệm</label>
            <input type="text" name="Ho_tendem" placeholder="Chưa cập nhật" class="form-control" value="@Model.Ho_tendem" />
            <label>Tên</label>
            <input type="text" name="Ten" placeholder="Chưa cập nhật" class="form-control" value="@Model.Ten" />
            <label>Số điện thoại</label>
            <input type="tel" name="SDT" placeholder="Chưa cập nhật" class="form-control" value="@Model.SDT" />
            <label>Email</label>
            <input type="email" name="Email" placeholder="Chưa cập nhật" class="form-control" value="@Model.Email" />
            <label>Địa chỉ</label>
            <input type="text" name="DiaChi" placeholder="Chưa cập nhật" class="form-control" value="@Model.DiaChi" />
            <label>Giới tính</label>
            <input type="text" name="GioiTinh" placeholder="M cho nam và F cho nữ, O cho khác" class="form-control" value="@Model.GioiTinh" />
            <label>Ngày sinh</label>
            <input type="date" name="SinhNhat" class="form-control"
                   value="@Model.SinhNhat.Value.ToString("yyyy-MM-dd")"
                   min="1940-01-01" >
            <div class="form-btn">
                <input type="button" value="Back" id="back" class="btn btn-primary" onclick="location.href = '@Url.Action("_Profile", "Account", new { username = ViewBag.username})'" />
                <input type="submit" value="Change" id="submit" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>

<style>
    #Username {
        color: blue;
        text-align: center;
        font-weight: bold;
        border: none;
        background-color: transparent;
        pointer-events: none;
    }
</style>