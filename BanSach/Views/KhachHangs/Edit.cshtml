@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layout_Admin.cshtml";
}

<style>
    .chia {
        display: flex;
        margin: auto;
        justify-content: space-around;
