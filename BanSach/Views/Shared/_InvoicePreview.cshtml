@model BanSach.Models.PreReceipt
<div class="receipt-preview">
    <div class="head"><h2>HÓA ĐƠN XEM TRƯỚC</h2><hr /></div>
    <div class="bill-content">
        <input type="number" id="count" value="@Model.Total_Item" style="display:none;"/>
        <h3>Tổng sản phẩm: <span id="value">@Model.Total_Item</span></h3>
        <h3>Tổng sản lượng: <span id="value">@Model.Total_Quantity</span></h3>
        <h3>Tạm tính: <span id="value">@Model.Provisional.Value.ToString("0#,0") &#8363;</span></h3>
        <h3>Khuyến mãi: <span id="value">@Model.Discount%</span></h3>
        <h1 id="total-money">Tổng tiền: <span id="value">@Model.Total_Money.Value.ToString("0#,0") &#8363;</span></h1>
    </div>
    <hr />
    <div class="purchase">
        <button id="go-back" type="button" onclick="location.href='/Home/Index'">Tiếp tục mua sắm</button>
        <button id="go-on" disabled type="button" onclick="location.href = '@Url.Action("ThanhToan", "GioHang", new { kh = ViewBag.khachhang_thanhtoan_id })'">Thanh toán</button>
    </div>
</div>
<script type="text/javascript">
    var count = document.querySelector('#count').value;
    if (count != 0) {
        $('#go-on').removeAttr('disabled');
        $('#go-on').css("background-color", "forestgreen");
        $('#go-on').hover(function () {
            $(this).css("background-color", "white");
            $(this).css("color", "black");
        }, function () {
                $(this).css("background-color", "forestgreen");
                $(this).css("color", "white");
        });
    }
</script>

<style>
    .purchase {
        width: 100%;
        height: 10%;
        display:flex;
    }
    .purchase form{
        width:100%;
    }
    .purchase button{
        width:50%;
        height:100%;
        color:white;
        border:0;
        border-radius:0;
    }
    #go-on {
        background-color: #7bde7b;
    }
    #go-back {
        background-color: deepskyblue;
    }
    .purchase #go-back:hover,
    .purchase #go-back:focus{
        background-color: white;
        color: black;
    }
    #total-money {
        color: blue;
        font-family: Arial;
    }
    #value{
        color:red;
    }
    .receipt-preview {
        width: 30%;
        height: 100%;
        border: 1px solid #e8d5e1;
        padding: 10px 5px;
        border-radius: 5px;
        background-color: #d3fff3;
    }
        .receipt-preview hr{
            border: 1px solid gray;
        }
        .receipt-preview:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

    .head {
        width: 100%;
        height: 15%;
        color: #0026ff;
        text-align: center;
    }

    .bill-content {
        width: 100%;
        height: 55%;
        font-family: 'Times New Roman';
    }
</style>