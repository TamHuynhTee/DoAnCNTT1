<!DOCTYPE html>
@using BanSach.Models;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="icon" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 51px;
            padding-bottom: 100px;
            height: 900px;
        }

        .header {
            border-bottom: 2px solid #ff4c4c;
            border-radius: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8f9fa;
            padding-left: 10px;
            padding-right: 10px;
            margin-bottom: 5px;
        }

        .category {
            width: 100%;
            height: 50px;
            display: flex;
            align-items: center;
            background-color: white;
            border-radius: 0;
            border-bottom: 2px solid black;
            margin-bottom: 15px;
        }

            .category div {
                width: 12.5%;
                height: 100%;
            }

            .category button {
                width: 100%;
                height: 100%;
            }

        .navbar-brand {
            padding: 0;
            border: none;
            background-color: transparent;
            outline: none;
        }

        .footer {
            border-radius: 0;
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
            border-top: 2px solid #65b7f6;
            padding-left: 10px;
            padding-right: 10px;
            overflow: auto;
            margin-top: 15px;
        }

        .footer-btn {
            float: right;
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 55%;
        }

            .footer-btn button,
            .header button,
            .category button {
                background-color: transparent;
                border: none;
                border-radius: 0;
                outline: none;
                color: black;
                font-size: 15px;
                font-weight: bold;
            }

        .category button {
            background-color: white;
        }

        .footer-btn button:hover,
        .footer-btn button:focus {
            color: #65b7f6;
        }

        .header button:hover,
        .header button:focus {
            color: #ff4c4c;
        }

        .category button:hover,
        .category button:focus {
            background-color: black;
            color: white;
        }

        .copyright {
            float: left;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            width: 40%;
            font-family:'Times New Roman';
            color:black;
        }

        .logo {
            width: 80%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login, .cart {
            width: 10%;
        }

        .body-container {
            display: flex;
            padding-bottom: 100px;
        }
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Dropdown Content (Hidden by Default) */
        .dropdown-content {
            display: none;
        }
            /* Links inside the dropdown */
            .dropdown-content button {
                display: block;
                color: black;
                padding: 12px 16px;
                width: 100%;
                border: 1px solid black;
            }
                /* Change color of dropdown links on hover */
                .dropdown-content button:hover,
                .dropdown-content button:focus {
                    background-color: black;
                    color: white;
                }
        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-content {
            display: block;
            position: absolute;
            background-color: white;
            min-width: 168px;
            right: 0;
        }

        #item-count {
            color: #ff4c4c;
        }
    </style>
    @{
        int count = 0, id = 0;
        string role = "anonymous", image_account = "";
        // Lấy id user để đếm số sản phẩm trong giỏ
        if (User.Identity.IsAuthenticated)
        {
            NhaSachEntities db = new NhaSachEntities();
            id = (from u in db.KhachHangs
                  where u.UsernameKH == User.Identity.Name.ToString()
                  select u.MaKH).FirstOrDefault();
            role = (from u in db.TaiKhoans
                    where u.Username == User.Identity.Name.ToString()
                    select u.Role).FirstOrDefault();
            if(role == "admin")
            {
                image_account = (from u in db.Admins
                                 where u.UsernameAD == User.Identity.Name.ToString()
                                 select u.AnhDaiDien).FirstOrDefault();
            }
            else
            {
                image_account = (from u in db.KhachHangs
                                 where u.UsernameKH == User.Identity.Name.ToString()
                                 select u.AnhDaiDien).FirstOrDefault();
            }
            count = db.GioHangs.Count(x => x.MaKH == id && x.MaDH == null);
        }
    }
</head>
<body>
    <!-- Header -->
    <div class="navbar navbar-fixed-top header">
        <!-- Cart -->
        <div class="cart">
            @if (User.Identity.IsAuthenticated)
            {
                if (role == "admin")
                {
                    <button onclick="location.href = '@Url.Action("Index", "HoaDon")'"><span class="glyphicon glyphicon-list-alt"></span> Đơn hàng</button>
                }
                else
                {
                    <button onclick="location.href = '@Url.Action("Index", "GioHang", new { id = id })'"><span class="glyphicon glyphicon-shopping-cart"></span> Giỏ hàng(<span id="item-count">@count</span>)</button>
                }
            }
            else
            {
                <button></button>
            }
            </div>
        <!-- Logo -->
        <div class="logo">
            <button class="navbar-brand" onclick="location.href='/Home/Index'"><img src="~/images/logo.png" height="50" width="50" /></button>
        </div>
        <!-- Login -->
        <div class="login">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <button class="dropbtn" onclick="location.href='#'"><img src="@image_account" height="30" width="30" class="img-circle"/> @if (role == "admin")
                    { <span style="color:blue;">@User.Identity.Name</span>}
                    else { <span>@User.Identity.Name</span>}</button>
                    <div class="dropdown-content">
                        @if (role == "admin")
                        {
                            <button onclick="location.href='/KhachHangs/Index'"><i class="glyphicon glyphicon-tasks"></i> Quản lý</button>
                        }
                        <button onclick="location.href='@Url.Action("_Profile","Account", new { username = User.Identity.Name})'"><i class="glyphicon glyphicon-home"></i> Trang cá nhân</button>
                        @if (role == "user")
                        {
                            <button onclick="location.href='@Url.Action("PaymentHistory","HoaDon", new { id = id})'"><i class="glyphicon glyphicon-usd"></i> Lịch sử mua hàng</button>
                        }
                        <button onclick="location.href='/Account/Logout'"><i class="glyphicon glyphicon-log-out"></i> Đăng xuất</button>
                    </div>
                </div> 
            }
            else
            {
                <button onclick="location.href='@Url.Action("Login","Account")'"><span class="glyphicon glyphicon-log-in"></span> Đăng nhập</button>          
            }
        </div>
    </div>
    <!-- Category bar -->
    <div>
        <form action="/Home/Index" method="post" class="navbar category">
            <input name="type" value="1" style="display:none;"/>
            <div>
                <button name="kind" value="ALL">Tất cả</button>
            </div>
            <div>
                <button name="kind" value="TT">Truyện tranh</button>
            </div>
            <div>
                <button name="kind" value="SGK">Sách giáo khoa</button>
            </div>
            <div>
                <button name="kind" value="GD">Giáo dục</button>
            </div>
            <div>
                <button name="kind" value="KHCN">Khoa học công nghệ</button>
            </div>
            <div>
                <button name="kind" value="VHNT">Văn học nghệ thuật</button>
            </div>
            <div>
                <button name="kind" value="SK">Sức khỏe</button>
            </div>
            <div class="dropdown">
                <button type="button" class="dropbtn">Khác <i class="glyphicon glyphicon-triangle-bottom"></i></button>
                <div class="dropdown-content">
                    <button name="kind" value="STN">Thiếu nhi</button>
                    <button name="kind" value="TLTG">Tâm lý, tôn giáo</button>
                    <button name="kind" value="LS">Lịch sử</button>
                    <button name="kind" value="VHXH">Văn hóa xã hội</button>
                    <button name="kind" value="TTH">Tiểu thuyết</button>
                    <button name="kind" value="CTPL">Chính trị pháp luật</button>
                </div>
            </div>
        </form>
    </div>
    <div class="body-container">
            @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="navbar navbar-fixed-bottom footer">
        <div class="copyright"><label style="margin:0;">&copy; Nhà Sách Tâm Đức - @DateTime.Now.Year</label></div>
        <div class="footer-btn">
            <button onclick="location.href='@Url.Action("Support","Home")'">Support</button>
            <button onclick="location.href='@Url.Action("Feedback","Home")'">Feedback</button>
            <button onclick="location.href='@Url.Action("About","Home")'">About</button>
            <button onclick="location.href='@Url.Action("Policy","Home")'">Policy</button>
        </div>
    </footer>
</body>
</html>