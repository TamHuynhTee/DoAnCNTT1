@{
    ViewBag.Title = "Support";
    Layout = "~/Views/Shared/_Layout_Footer.cshtml";
}

<style>
    #wrapper {
        width: 100%;
        height: 700px;
        border: 1px solid red;
        border-radius: 5px;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap-reverse;
        padding: 20px;
    }

    #left {
        width: 30%;
        height: 500px;
        float: left;
        border: 1px solid;
    }

    #main {
        width: 30%;
        height: 600px;
        float: left;
        border: 1px solid;
    }

    #right {
        width: 30%;
        height: 500px;
        float: left;
        border: 1px solid;
    }

    #bor {
        padding: 0px;
        margin-top: 0px;
        width: 100%;
        height: 20%;
        border-bottom: 1px solid red;
        text-align: center;
        background-color: aquamarine;
        color: red;
    }

    #text {
        width: 100%;
        padding: 20px;
        text-align: center;
        font-family: 'Cambria Math';
        font-size: 30px;
    }
</style>

<div id="wrapper">
    <div id="left">
        <div id="bor">
            <h2>Bước 1</h2>
        </div>
        <div id="text">
            Đăng nhập<br />

        </div>
        <center><img src="~/images/hinh1.png" class="img-circle" width="300" /></center>
    </div>
    <div id="main">
        <div id="bor">
            <h2>Bước 2</h2>
        </div>
        <div id="text">
            Mua Hàng<br />

        </div>
        <center><img src="~/images/hinh2.png" class="img-circle" width="300" /></center>
    </div>
    <div id="right">
        <div id="bor">
            <h2>Bước 3</h2>
        </div>
        <div id="text">
            Thanh toán<br />

        </div>
        <center><img src="~/images/hinh3.png" class="img-circle" width="300" /></center>
    </div>
</div>

