@model IEnumerable<BanSach.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .header-info {
        width: 100%;
        height: 20%;
    }

    .main-info {
        width: 100%;
        height: 70%;
        border: 1px solid #808080;
        overflow: auto;
    }

    .header-info h1 {
        margin: 0;
        text-align: center;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
    th{
        background-color:black;
        color:white;
    }
</style>
<div class="header-info">
    <h1>Sản phẩm</h1>
</div>

<div class="main-info">
    <table class="table">
        <tr>
            <th>
                Tựa sách
            </th>
            <th>
                Ngày xuất bản
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Đơn giá
            </th>

            <th>
                Loại
            </th>
            <th>
                Nhà xuất bản
            </th>
            <th>
                Tác giả
            </th>
            <th>Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TuaSach)
                </td>
                <td>
                    @item.NgayXuatBan.Value.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @item.DonGia.Value.ToString("0#,0") &#8363;
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiSach.TenLoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhaXuatBan1.TenNXB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TacGia1.TenTacGia)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaSach }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaSach }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaSach })
                </td>
            </tr>
        }

    </table>

</div>