            outline: 0;
            margin-left:20px;
            height:26px;
            color:white;
        }
    .review-items {
        width: 100%;
        max-height: 225px;
        border: 1px solid #8383a7;
        border-radius: 5px;
        padding: 0 10px 0 10px;
        overflow:auto;
    }
    #notify{
        width:70%;
        color:red;
        margin:0 auto;
    }

    #add-review{
        background-color:green;
    }
    #del-review{
        background-color:red;
    }
    #add-review:hover,
    #add-review:focus,
    #del-review:hover,
    #del-review:focus{
        background-color:black;
    }
</style>